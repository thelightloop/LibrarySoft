@model Library.Common.DTO.LoginDto
<style>
    body {
        background: linear-gradient(to right, #e0eafc, #cfdef3);
    }

    .card {
        background-color: #ffffff;
    }

    .form-control:focus {
        border-color: #0d6efd;
        box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
    }
</style>


<div class="container d-flex justify-content-center align-items-center min-vh-100 bg-light">
    <div class="card shadow-lg p-4 rounded-4" style="width: 100%; max-width: 400px;">
        <h4 class="mb-4 text-center">Login</h4>
        <form asp-controller="Auth" asp-action="Login" asp-Method="Post">
            <div class="mb-3">
                <label for="loginUsername" class="form-label">Username</label>
                <input asp-for="Username" type="text" class="form-control" id="loginUsername" placeholder="Enter username" required>
            </div>
            <div class="mb-3">
                <label for="loginPassword" class="form-label">Password</label>
                <input asp-for="Password" type="password" class="form-control" id="loginPassword" placeholder="Enter password" required>
            </div>
            <div class="mb-3 form-check">
                <input type="checkbox" class="form-check-input" id="rememberMe">
                <label class="form-check-label" for="rememberMe">Remember me</label>
            </div>
            <button type="submit" class="btn btn-primary w-100">Login</button>
            <p class="mt-3 text-center text-muted">
                Don't have an account? <a asp-controller="Auth" asp-action="Register">Register</a>

            </p>
        </form>
    </div>
</div>

